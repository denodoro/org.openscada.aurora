<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<bean id="propertyPlaceholder"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties">
			<props>
				<prop key="org.openscada.ds.storage.jdbc.schema"></prop>
			</props>
		</property>
		<property name="location"
			value="osgibundle:/META-INF/db.properties" />
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName"
			value="${org.openscada.ds.storage.jdbc.driver}" />
		<property name="url" value="${org.openscada.ds.jdbc.url}" />
		<property name="username"
			value="${org.openscada.ds.storage.jdbc.username}" />
		<property name="password"
			value="${org.openscada.ds.storage.jdbc.password}" />
	</bean>

	<bean id="hibernateProperties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="hibernate.default_schema">${org.openscada.ds.storage.jdbc.schema}</prop>
			</props>
		</property>
		<property name="location"
			value="osgibundle:/META-INF/hibernate.properties" />
	</bean>

	<bean id="sessionFactory"
		class="org.openscada.ds.storage.jdbc.internal.CustomSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties" ref="hibernateProperties" />
		<property name="mappingResources">
			<list>
				<value>org/openscada/ds/storage/jdbc/internal/entry.hbm.xml
				</value>
			</list>
		</property>
	</bean>

	<bean id="txManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean name="jdbcStorageDAOTarget"
		class="org.openscada.ca.jdbc.internal.JdbcStorageDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean name="jdbcStorage" class="org.openscada.ca.jdbc.internal.ConfigurationAdministratorImpl"
		init-method="start" destroy-method="stop">
		<constructor-arg>
			<ref bean="bundleContext"/>
		</constructor-arg>
		<property name="jdbcStorageDAO" ref="jdbcStorageDAO" />
	</bean>

	<bean id="jdbcStorageDAO"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="txManager" />
		<property name="target" ref="jdbcStorageDAOTarget" />
		<property name="transactionAttributes">
			<props>
				<prop key="storeConfiguration">PROPAGATION_REQUIRED</prop>
				<prop key="deleteConfiguration">PROPAGATION_REQUIRED</prop>
				<prop key="loadFactory">PROPAGATION_REQUIRED</prop>
				<prop key="loadAll">PROPAGATION_REQUIRED</prop>
				<prop key="purgeFactory">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

</beans>
