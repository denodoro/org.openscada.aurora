	<bean id="txManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean name="jdbcStorage" class="org.openscada.ds.storage.jdbc.internal.StorageImpl"
		destroy-method="dispose">
		<property name="storage" ref="jdbcStorageDAO.${org.openscada.ds.storage.jdbc.encoder}" />
	</bean>
	
	<bean name="jdbcStorageDAOBlobTarget"
		class="org.openscada.ds.storage.jdbc.internal.JdbcStorageDAOBlobImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="jdbcStorageDAO.blob"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="txManager" />
		<property name="target" ref="jdbcStorageDAOBlobTarget" />
		<property name="transactionAttributes">
			<props>
				<prop key="readNode">PROPAGATION_REQUIRED</prop>
				<prop key="deleteNode">PROPAGATION_REQUIRED</prop>
				<prop key="writeNode">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
