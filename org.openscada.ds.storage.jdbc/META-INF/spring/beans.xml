	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass"
			value="${org.openscada.ds.storage.jdbc.driver}" />
		<property name="url" value="${org.openscada.ds.storage.jdbc.url}" />
		<property name="username"
			value="${org.openscada.ds.storage.jdbc.username}" />
		<property name="password"
			value="${org.openscada.ds.storage.jdbc.password}" />
	</bean>

